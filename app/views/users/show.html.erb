<% if signed_in? %>
  <div class="row">
    <div class="col-md-4 border-right">
      <%= render "shared/user_info", user: @user %>
    </div>
    <div class="col-md-8">
      <%= render "follow_form" unless current_user? @user %>
      <%= render "shared/activity" %>
      <hr />
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "app_name" %></h1>
    <%= link_to t("sign_up"), signup_path, class: "btn btn-large btn-primary" %>
  </div>
  <%= link_to image_tag("http://rubyonrails.org/images/rails.png", alt: "Rails"), "http://rubyonrails.org" %>
<% end %>
