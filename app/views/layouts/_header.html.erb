<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-container">
    <div class="container">
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t("home"), root_url %></li>
          <li><%= link_to t("help"), help_url %></li>
          <% if signed_in? %>
            <li><%= link_to t("users"), users_url %></li>
            <li class="dropdown" id="dropdownMenuDivider">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                <%= t "account" %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
                <li><%= link_to t("profile"), user_path(@current_user) %></li>
                <li><%= link_to t("setting"), edit_user_path(@current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to t("sign_out"), signout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("sign_in"), signin_url %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
