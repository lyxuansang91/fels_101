<div class="col-md-6 col-md-offset-3">
  <%= form_for [:admin, @category, @word] do |f| %>
    <%= render "shared/error_messages", object: @word %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <%= link_to_add_fields t("answer.add"), f, :answers %>
    </div>
    <%= f.hidden_field :category_id, value: :category_id %>
    <%= f.label :answers %>
    <div class="form-group">
      <%= f.fields_for :answers do |answer| %>
        <div class="nested-fields">
          <%= render "answer_fields", f: answer %>
        </div>
      <% end %>
    </div>
    <%= f.submit t("button.submit"), class: "btn btn-primary" %>
  <% end %>
</div>
