<% if signed_in? %>
  <div class="row">
    <div class="col-md-4 border-right">
      <%= render "shared/user_info", user: @current_user %>
    </div>
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-6">
          <%= link_to t("words"), "#", class: "btn btn-default btn-primary full-size" %>
        </div>
        <div class="col-md-6">
          <%= link_to t("lessons"), categories_path, class: "btn btn-default btn-primary full-size"%>
        </div>
      </div>
      <h3><%= t "user_acitivities" %></h3>
      <hr />
      <%= render "shared/activity", activities: @activities %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "app_name" %></h1>
    <%= link_to t("sign_up"), signup_path, class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("http://rubyonrails.org/images/rails.png", alt: t("Rails")), "http://rubyonrails.org" %>
<% end %>
